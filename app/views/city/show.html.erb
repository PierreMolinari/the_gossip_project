  <div class="jumbotron">
        <div class="container text-center">
        <h1 class="display-3 text-primary"><%= @city.name%></h1>
        </div>
      </div>

      <main class="container">
      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">liste des potins ecrit pour cette ville</h6>
        <% @user.each do|u|%>
            <% u.gossips.each do |g|%>
            <h6 class="mt-2"><%= g.title%><small> date : <%= g.created_at%></small></h6>
          <div class="media text-muted">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">Auteur : <%=link_to "#{u.first_name} #{u.last_name}", user_path(u.id)%></strong>
           <%= g.content.truncate(100)%>
           <%= link_to "suite", gossip_path(g.id) %>
            </p>
          </div>
          <%end%>
          <%end%>
        </div>
        </main>